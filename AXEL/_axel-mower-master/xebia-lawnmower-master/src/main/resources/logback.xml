<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %5p | %-18logger{16} | %m %n</pattern>
        </encoder>
    </appender>
    
    <logger name="cma.xebia">
        <level value="INFO" />
    </logger>
    
    <logger name="org.springframework">
        <level value="WARN" />
    </logger>
    
    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>